<?xml version="1.0" encoding="utf-8"?>
<com.widget.MyLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_mylayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/txt_viewgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:textColor="@android:color/holo_red_dark"
        android:text="Android-ViewGroup事件分发机制"/>

    <Button
        android:id="@+id/btn_viewgroup_test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="button1"/>

    <Button
        android:id="@+id/btn_viewgroup_test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="button2" />


</com.widget.MyLayout>
